<div
  data-controller="dropdown"
  data-dropdown-open-value="false"
  class="relative inline-block text-left"
>
  <div>
    <button
      data-dropdown-target="activated"
      data-action="click->dropdown#toggleDropdown"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
        />
      </svg>
    </button>
  </div>

  <div
    data-dropdown-target="dropdownContent"
    class="
      absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg
      ring-1 ring-black ring-opacity-5 focus:outline-none
    "
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="menu-button"
    tabindex="-1"
  >
    <div
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="menu-button"
      tabindex="-1"
    >
      <% if user_signed_in? %>
        <%= button_to(
          t("sign_out"),
          destroy_user_session_path,
          method: :delete,
          class:
            "text-gray-700 w-full px-4 py-2 text-left text-sm hover:bg-gray-100 rounded-md",
        ) %>
        <%= link_to t("account"),
        edit_user_registration_path,
        class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 rounded-md" %>
        <%= link_to t("index.articles"),
        articles_path,
        class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 rounded-md" %>

      <% else %>

        <%= link_to t("sign_up"),
        new_user_registration_path,
        class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 rounded-md" %>

        <%= link_to t("sign_in"),
        new_user_session_path,
        class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 rounded-md" %>
      <% end %>

    </div>
  </div>
</div>
