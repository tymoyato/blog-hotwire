<div class="min-h-screen flex items-center justify-center w-full bg-indigo-100">
  <div class="bg-white shadow-md rounded-lg px-8 py-6 max-w-md">
    <%= link_to root_path do %>
      <%= image_tag "https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600",
      alt: "Clickable Image",
      class: "mx-auto h-10 w-auto" %>
    <% end %>
    <h1 class="text-2xl font-bold text-center mb-4"><%= t("sign_up_title") %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mb-4">
        <%= f.label t("email"), class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      type: "email",
                      required: true,
                      placeholder: t("email_placeholder"),
                      class:
                        "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <% if resource.errors[:email].any? %>
        <span class="text-sm text-red-500 mt-1"><%= resource.errors[:email].join(", ") %></span>
      <% end %>

      <div class="mb-4">
        <%= f.label t("username"), class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= f.text_field :username,
                     autofocus: true,
                     required: true,
                     placeholder: t("username_placeholder"),
                     class:
                       "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <% if resource.errors[:username].any? %>
        <span class="text-sm text-red-500 mt-1"><%= resource.errors[:username].join(", ") %></span>
      <% end %>

      <div class="mb-4">
        <%= f.label t("password"), class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= f.password_field :password,
                         type: "password",
                         autocomplete: "new-password",
                         require: true,
                         placeholder: t("password_placeholder"),
                         class:
                           "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        <% if resource.errors[:password].any? %>
          <span class="text-sm text-red-500 mt-1"><%= resource.errors[:password].join(", ") %></span>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label t("password_confirmation"),
                class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= f.password_field :password_confirmation,
                         type: "password",
                         autocomplete: "new-password",
                         require: true,
                         placeholder: t("password_placeholder"),
                         class:
                           "shadow-sm rounded-md w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        <% if resource.errors[:password].any? %>
          <span class="text-sm text-red-500 mt-1"><%= resource.errors[:password].join(", ") %></span>
        <% end %>
      </div>

      <div class="flex items-center justify-between mb-4">

        <div class="flex items-center">
          <div class="ml-2 block text-sm"><%= t("already_registered") %></div>
        </div>

        <%= link_to t("sign_in"),
        new_user_session_path,
        class:
          "text-xs text-indigo-500 hover:text-indigo-700 focus:outline-none focus:ring-2
                                                                                                                                                                                                                                                                                                                                                focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.submit t("sign_up"),
                 class:
                   "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-4" %>
      </div>
    <% end %>

  </div>
</div>
